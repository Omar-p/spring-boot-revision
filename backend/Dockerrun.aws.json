{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "environment": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:postgresql://postgres:5432/customer"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "postgres"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "postgres"
        }
      ],
      "essential": true,
      "image": "omar077/customers-api:36d74144f20da43d91f308378c585a1ac00bc83b",
      "name": "backend",
      "memory": 512,
      "links": [
        "postgres"
      ],
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 80
        }
      ]
    },
    {
      "environment": [
        {
          "name": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_DB",
          "value": "customer"
        }
      ],
      "essential": true,
      "memory": 256,
      "image": "postgres:15-alpine",
      "mountPoints": [
        {
          "containerPath": "/var/lib/postgresql/data",
          "sourceVolume": "Customer-Db"
        }
      ],
      "name": "postgres",
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 5432
        }
      ]
    }
  ],
  "family": "spring-app",
  "volumes": [
    {
      "host": {
        "sourcePath": "customer-db"
      },
      "name": "Customer-Db"
    }
  ]
}
